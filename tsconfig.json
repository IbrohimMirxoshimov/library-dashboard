{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "src",
    "paths": {
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"],
      "@layouts": ["layouts"],
      "@layouts/*": ["layouts/*"],
      "@localization": ["localization/index.ts"],
      "@modules": ["modules"],
      "@modules/*": ["modules/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@ts-types/*": ["types/*"],
      "@utilities": ["utilities"],
      "@utilities/*": ["utilities/*"]
    }
  },
  "include": ["src", "src/types", "vite.config.ts"],
  "references": [{"path": "./tsconfig.node.json"}]
}
